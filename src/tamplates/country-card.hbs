

<div class="country">
    <div class="country-img">
        <img width="100px" height="100px" src="{{flags.svg}}" alt="{{name.official}}">
    </div>
    <div class="country-body">
        <h1 class="country-name">{{name.official}}</h2>
        <p class="country-capital">Capital: {{capital}}</p>
        <p class="country-population">Population: {{population}}</p>

        <p class="country-languages">Languages:</p>
        <ul class="list-group">
            {{#each languages}}
            <li class="list-group-item">{{this}}</li>
            {{/each}}
        </ul>
    </div>
</div>